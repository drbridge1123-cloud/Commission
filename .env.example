# Commission Calculator Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
# For production: Create a dedicated user (see migrations/002_create_db_user.sql)
# Never use 'root' in production!
DB_HOST=localhost
DB_NAME=commission_db
DB_USER=commission_user
DB_PASS=your_secure_password_here

# ============================================
# Application Settings
# ============================================
# APP_ENV: 'development' or 'production'
# - development: Skips HTTPS redirect
# - production: Forces HTTPS
APP_ENV=production

# APP_DEBUG: true or false
# - true: Shows detailed error messages (for development only!)
# - false: Hides errors, logs to file (recommended for production)
APP_DEBUG=false

# Your application URL
APP_URL=https://yourdomain.com

# ============================================
# Security Settings
# ============================================
# Session lifetime in seconds (3600 = 1 hour)
SESSION_LIFETIME=3600

# CSRF token lifetime in seconds
CSRF_TOKEN_LIFETIME=3600

# Rate limiting: requests per time window
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
